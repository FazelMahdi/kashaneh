datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  driver        Driver    @relation(fields: [driverId], references: [id])
  driverId      String   @db.ObjectId
  pelak         String
  startDate     Date
  endDate       Date
  destination   Destination    @relation(fields: [destinationId], references: [id])
  destinationId String
  address       String
  product       Product    @relation(fields: [productId], references: [id])
  productId     String
  workerGroup   WorkerGroup    @relation(fields: [workerGroupId], references: [id])
  workerGroupId String
  state         32-Bit Integer
  emptyWeight   32-Bit Integer
  amount        32-Bit Integer
  needsOfAmount 32-Bit Integer
}

model WorkerGroup {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
}

model Destination {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
}

model Driver {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName     String
  lastName      String
  mobile        String
  pelak         String
  date          Date
}

model Product {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  unit          32-Bit Integer
  price         32-Bit Integer
  finalPrice    32-Bit Integer
  loadPrice     32-Bit Integer
  baskulPrice   32-Bit Integer
}
