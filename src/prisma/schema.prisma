datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  driver        DriverType      
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now()) @map(name: "updated_at")
  destination   DestinationType
  address       String
  product       ProductType 
  workerGroup   WorkerGroupType
  state         Int         @default(1)
  emptyWeight   Int
  amount        Int
  needsOfAmount Int
  preOrder      Int         @default(0)
}

model WorkerGroup {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  title  String  @unique
}

model Destination {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  title  String  @unique
}

model Driver {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  mobile    String   @unique
  pelak     Pelak
  fullPelak String
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String   @unique
  unit        Int
  price       Int
  finalPrice  Int
  loadPrice   Int
  baskulPrice Int
  createdAt   DateTime @default(now())
}

type Pelak {
  p1 String
  p2 String
  p3 String
  p4 String
}

type ProductType {
  id          String
  title       String
  unit        Int
  price       Int
  finalPrice  Int
  loadPrice   Int
  baskulPrice Int
  createdAt   DateTime
}

type DriverType {
  id        String
  firstName String
  lastName  String
  mobile    String
  pelak     Pelak
  fullPelak String
  createdAt DateTime
}
type WorkerGroupType {
  id     String
  title  String
}
type DestinationType {
  id     String
  title  String
}
